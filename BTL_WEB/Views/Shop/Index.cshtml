@model PagedList.IPagedList<BTL_WEB.Models.SANPHAM>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
@section slide
    {
    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
        <div class="navbar-nav mx-auto">
            <a href="~/User/Index" class="nav-item nav-link">Home</a>
            <a href="~/Shop/Index" class="nav-item nav-link active">Shop</a>

            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                    <a href="~/Cart/Index" class="dropdown-item">Cart</a>
                    <a href="~/Checkout/Index" class="dropdown-item">Chackout</a>
                    <a href="~/Testimonial/Index" class="dropdown-item">Testimonial</a>
                    <a href="404.html" class="dropdown-item">404 Page</a>
                </div>
            </div>
            <a href="contact.html" class="nav-item nav-link">Contact</a>
        </div>
        <div class="d-flex m-3 me-0">
            <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
            <a href="~/Cart/Index" class="position-relative me-4 my-auto">
                <i class="fa fa-shopping-bag fa-2x"></i>
                <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
            </a>
            <a href="#" class="my-auto">
                <i class="fas fa-user fa-2x"></i>
            </a>
        </div>
    </div>
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Shop</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="Index">Home</a></li>
        <li class="breadcrumb-item"><a href="Index">Pages</a></li>
        <li class="breadcrumb-item active text-white">Shop</li>
    </ol>
</div>
<!-- Single Page Header End -->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        @if (Model.Any())
        {
            <h1 class="mb-4">Danh Sách Sản Phẩm</h1>
            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="row g-4">
                        <div class="col-xl-3">
                            <div class="mb-3">
                                <form action="@Url.Action("Index", "Shop")" method="post">
                                    <div class="input-group">
                                        <input type="text" name="keyword" class="form-control p-3" placeholder="Bạn cần tìm gì?" aria-describedby="search-icon-1">
                                        <span id="search-icon-1" class="input-group-text p-3">
                                            <i class="fa fa-search" onclick="document.forms[0].submit();"></i>
                                        </span>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="col-6"></div>
                        <div class="col-xl-3">
                        </div>
                    </div>
                    <div class="row g-4 mt-2">
                        <div class="col-lg-3">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4>Thể Loại</h4>
                                        <ul class="list-unstyled fruite-categorie">
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="@Url.Action("Index", new { loai = "Man Watch" })"><i class="fas fa-apple-alt me-2"></i>Đồng Hồ Nam</a>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="@Url.Action("Index", new { loai = "Woman Watch" })"><i class="fas fa-apple-alt me-2"></i>Đồng Hồ Nữ</a>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="@Url.Action("Index", new { loai = "PhuKien" })"><i class="fas fa-apple-alt me-2"></i>Phụ Kiện</a>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="@Url.Action("Index", new { loai = "Seller" })"><i class="fas fa-apple-alt me-2"></i>Seller</a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4 class="mb-2">Price</h4>
                                        <input type="range" class="form-range w-100" id="rangeInput" name="rangeInput" min="0" max="500" value="0" oninput="amount.value=rangeInput.value">
                                        <output id="amount" name="amount" min-velue="0" max-value="500" for="rangeInput">0</output>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="position-relative">
                                        <img src="~/Public/img/Banner-1.jpg" class="img-fluid w-100 rounded" alt="">
                                        <div class="position-absolute" style="top: 50%; right: 10px; transform: translateY(-50%);">
                                            <h3 class="text-secondary fw-bold">Watch <br> Shop <br> Banner</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*----------------------------------------------DANH SACH SAN PHAM -------------------------------------------*@

                        <div class="col-lg-9">
                            <div class="row g-4 justify-content-center">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-6 col-lg-6 col-xl-4">
                                        <div class="rounded position-relative fruite-item">
                                            <div class="fruite-img">
                                                <a href="~/Detail/Index?id=@item.MASP">
                                                    <img src="~/Public/img/@item.HINHLON" class="img-fluid w-100 rounded-top" alt="~/Public/img/@item.HINHLON">
                                                </a>
                                            </div>
                                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@item.LOAISANPHAM.TENLOAISP</div>

                                            @if (item.MALOAISP == "LP00003")
                                            {
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">SALE @item.KHUYENMAI.PHAMTRAM%</div>
                                            }

                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                <a href="~/Detail/Index?id=@item.MASP">
                                                    <h4>@item.TENSP</h4>
                                                </a>

                                                <div class="d-flex justify-content-between flex-lg-wrap">
                                                    <p class="text-dark fs-5 fw-bold mb-0">
                                                            @if (item.MALOAISP == "LP00003")
                                                            {
                                                                <span style="text-decoration: line-through; color: darkgray;">
                                                                    @string.Format("{0:#,0}", item.DONGIA)
                                                                </span>

                                                                if (item.KHUYENMAI != null && item.KHUYENMAI.PHAMTRAM.HasValue)
                                                                {
                                                                    <span style="margin-left:15px;">
                                                                        @string.Format("{0:#,0}", item.DONGIA * (1 - item.KHUYENMAI.PHAMTRAM.Value / 100)) VND
                                                                    </span>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <span>@string.Format("{0:#,0}", item.DONGIA) VND</span>
                                                            }
                                                    </p>

                                                    <a href="javascript:void(0)" onclick="CartClass.AddItem(@item.MASP, 1)" class="btn border border-secondary rounded-pill px-3 text-primary">
                                                        <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <div class="pagination d-flex justify-content-center mt-5">
                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, keyword = Request.QueryString["keyword"] }))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <i class="bi bi-exclamation-triangle display-1 text-secondary"></i>
                    <h1 class="mb-4">Sản phẩm không tồn tại</h1>
                </div>
            </div>
        }
    </div>
</div>