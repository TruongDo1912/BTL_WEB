@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Login Form</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        .login-container {
            width: 500px;
            padding: 0 35px 50px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-block {
            margin-top: 30px;
        }

        .exitlogin {
            font-size: 22px;
            color: black;
            padding: 20px;
            margin-right: -33px;
        }
    </style>
</head>
<body>

    <div class="login-container mb-4">
        <div class="d-flex">
            <a href="#" class="exitlogin ml-auto"><i class="fa-solid fa-xmark"></i></a>
        </div>
        <h2 class="text-center mb-4 mt-0 text-uppercase">Đăng nhập</h2>
        <form method="post" role="form">
            <div class="form-group">
                <label for="tennd">Tên người dùng:</label>
                <input type="text" class="form-control" id="tennd" placeholder="Nhập tên người dùng" required name="tennd">
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu:</label>
                <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" required name="matkhau">
            </div>
            <div class="form-group">
                <p class="text-danger">
                    @TempData["erorr"]
                    @ViewData["erorr"]
                </p>
            </div>
            <div class="form-group font-italic ">
                <input type="checkbox" id="savepassword">
                <label for="savepassword">Lưu đăng nhập</label>
            </div>
            <button type="submit" class="btn btn-primary btn-block ">Đăng nhập</button>
            <div class="row mt-3">
                <div class="col-6">
                    <a href="@Url.Action("Index","Test")" class="text-left">Lấy lại mật khẩu</a>
                </div>
                <div class="col-6 text-right ">
                    <a href="@Url.Action("Register","Login")" class="">Đăng ký tài khoản</a>
                </div>
            </div>

        </form>
    </div>
</body>
</html>